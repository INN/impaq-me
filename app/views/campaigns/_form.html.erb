<div id="dashMain">
  <%= form_for(@campaign) do |f| %>
    <% if @campaign.errors.any? %>
    <div id="error_explanation">
    <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

    <ul>
      <% @campaign.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <%= f.label :foundation_name %><br>
    <%= f.text_field :foundation_name %>
  </div>
  <div class="field">
    <%= f.label :publisher_name %><br>
    <%= f.text_field :publisher_name %>
  </div>
  <div class="field">
    <%= f.label :domains %><br>
    <%= f.text_field :domains, { value: @campaign.domains_to_s } %>
  </div>
  <div class="field">
    <%= f.label :value_per_share %><br>
    <%= f.number_field :value_per_share, :step => '.01' %>
  </div>
  <div class="field">
    <%= f.label :value_per_click %><br>
    <%= f.number_field :value_per_click, :step => '.01'%>
  </div>
  <div class="field">
    <%= f.label :goal %><br>
    <%= f.number_field :goal, :step => '.01' %>
  </div>
  <div class="field">
    <%= f.label :paypal %><br>
    <%= f.text_field :paypal %>
  </div>
  <div class="field">
    <%= f.label :recommended_donation %><br>
    <%= f.number_field :recommended_donation, :step => '.01' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
