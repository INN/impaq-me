<div id="dashMain">
  <h1>Dashboard</h1>
  <%= link_to "New Campaign", new_campaign_path %>
  <%= link_to "Edit Users", users_path %>
  <%= link_to "Sign Out", signout_path, method: "delete" %>
  <ul>
    <% @campaigns.each do |campaign| %>
      <li>
      <%= campaign.inspect %>
      <br> <strong>Shares:</strong> <%= Share.total_for_campaign campaign.id %>
      <br> <%= link_to "edit",(edit_campaign_path campaign.id) %>
      </li>
    <% end %>
  </ul>
</div>
