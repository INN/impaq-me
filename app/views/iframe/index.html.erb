<!DOCTYPE html>
<html>
  <head>
    <title>Impaq.me</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "lineman/iframe/app", media: "all" %>
    <%= content_tag :style, @campaign[:css_overrides] if @campaign %>
    <!--[if lt IE 9]>
      <script src="/scripts/ie8-shims.js" type="text/javascript"></script>
    <![endif]-->
    <meta property="fb:app_id" content="<%= ENV['IMPAQ_ME_FACEBOOK_APP_ID'] %>" />
    <meta property="og:title" content="Shared by Impaq.Me" />
  </head>
  <body>
    <div id="fb-root"></div>
    <main></main>

    <%= javascript_include_tag "lineman/iframe/app" %>
    <script type="text/javascript">
      window.impaqme = <%= j(@campaign.to_json.html_safe) %>;

      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-17578670-6');
      ga('set', 'dimension1', '<%= @campaign[:campaign_id] %>');
      ga('set', 'dimension2', '<%= @campaign[:variant_id] %>');
    </script>
  </body>
</html>
