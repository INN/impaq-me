<div class="cta">
  <div data-subview="WidgetButton"></div>
  <ul class="share_tools">
    <li class="facebook"><div class="fb-like" data-href="<%= facebook_shortlink %>" data-width="90" data-layout="button_count"></div></li>
    <li class="twitter"><a class="twitter-share-button" href="https://twitter.com/intent/tweet" data-text="<%= article_title %>" data-url="<%= twitter_shortlink %>" data-via="<%= twitter_username %>" data-count="none">Tweet</a></li>
    <% if( !campaign_over ){ %>
    <li class="email"><a href="mailto:?subject=<%= encodeURIComponent("I thought you would like this article: " + article_title) %>&amp;body=<%= encodeURIComponent("I thought you would like this article:\r\n\r\n"+ article_title +" - "+ email_shortlink +" \r\n\r\nEach time this article is shared, "+ foundation_name +" donates $"+ value_per_share +" to "+ publisher_name +". So far, they have donated $"+ (total + value_per_click) +".\r\nLearn more at http://impaq.me") %>" target="_blank">Email</a></li>
    <% } else { %>
    <li class="email"><a href="mailto:?subject=<%= encodeURIComponent("I thought you would like this article: " + article_title) %>&amp;body=<%= encodeURIComponent("I thought you would like this article:\r\n\r\n"+ article_title +" - "+ email_shortlink +" \r\n\r\nThanks to readers sharing "+ publisher_name +" articles, "+ foundation_name +" has donated $"+ (total + value_per_click) +".\r\nLearn more at http://impaq.me") %>" target="_blank">Email</a></li>
    <% } %>
  </ul>
  <div class="progress_meter"><p>$<%= total %> Raised <% if(!campaign_over){ %>so far<% } %></p></div>
  <style type="text/css">.progress_meter p:before { width:<%= percent %>%; }</style>
</div>
